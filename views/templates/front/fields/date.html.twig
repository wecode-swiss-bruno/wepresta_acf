{#
 # ACF Date Field Template (Twig)
 #}

{% if value is not empty %}
    {% set format = config.displayFormat|default('d/m/Y') %}
    
    <time class="acf-date{% if customClass %} {{ customClass }}{% endif %}" 
          datetime="{{ value }}"
          {% if customId %}id="{{ customId }}"{% endif %}>
        {{ value|date(format) }}
    </time>
{% endif %}
