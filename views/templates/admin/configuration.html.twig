{# **
 * Module Starter - Configuration Page Template
 *
 * @var FormView configurationForm
 * @var string moduleVersion
 * #}

{% extends '@PrestaShop/Admin/layout.html.twig' %}

{# Import WEDEV UI Macros via relative path #}
{% import '@Modules/wepresta_acf/src/Wedev/Extension/UI/Twig/Macros/admin.html.twig' as ui %}

{% block content %}
{# Include WEDEV UI Partials #}
{% include '@Modules/wepresta_acf/src/Wedev/Extension/UI/Templates/admin/_partials/confirm-modal.html.twig' %}
{% include '@Modules/wepresta_acf/src/Wedev/Extension/UI/Templates/admin/_partials/toasts.html.twig' %}
<div class="wepresta_acf-config">
    {# Header Info Cards #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-header-title">
                        {{ ui.icon('settings', 'md') }}
                        {{ 'Module Starter Configuration'|trans({}, 'Modules.WeprestaAcf.Admin') }}
                    </h3>
                    {{ ui.badge('v' ~ moduleVersion, 'info') }}
                </div>
            </div>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="wepresta_acf-info-cards mb-4">
        <div class="wepresta_acf-info-card wepresta_acf-info-card--success">
            <div class="wepresta_acf-info-card__icon">
                {{ ui.icon('check_circle', 'lg') }}
            </div>
            <div class="wepresta_acf-info-card__title">{{ 'Status'|trans({}, 'Admin.Global') }}</div>
            <div class="wepresta_acf-info-card__value">{{ 'Active'|trans({}, 'Admin.Global') }}</div>
        </div>

        <div class="wepresta_acf-info-card">
            <div class="wepresta_acf-info-card__icon">
                {{ ui.icon('storage', 'lg') }}
            </div>
            <div class="wepresta_acf-info-card__title">{{ 'Items'|trans({}, 'Admin.Global') }}</div>
            <div class="wepresta_acf-info-card__value">0</div>
        </div>

        <div class="wepresta_acf-info-card">
            <div class="wepresta_acf-info-card__icon">
                {{ ui.icon('schedule', 'lg') }}
            </div>
            <div class="wepresta_acf-info-card__title">{{ 'Cache TTL'|trans({}, 'Modules.WeprestaAcf.Admin') }}</div>
            <div class="wepresta_acf-info-card__value">3600s</div>
        </div>
    </div>

    {# Configuration Form #}
    <div class="row">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-header-title">
                        {{ ui.icon('tune', 'md') }}
                        {{ 'Settings'|trans({}, 'Admin.Global') }}
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(configurationForm) }}

                    <div class="form-group row">
                        {{ form_label(configurationForm.active) }}
                        <div class="col-sm">
                            {{ form_widget(configurationForm.active) }}
                            {{ form_errors(configurationForm.active) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(configurationForm.title) }}
                        <div class="col-sm">
                            {{ form_widget(configurationForm.title) }}
                            {{ form_errors(configurationForm.title) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(configurationForm.description) }}
                        <div class="col-sm">
                            {{ form_widget(configurationForm.description) }}
                            {{ form_errors(configurationForm.description) }}
                        </div>
                    </div>

                    <hr>

                    <h4>{{ 'Advanced Settings'|trans({}, 'Modules.WeprestaAcf.Admin') }}</h4>

                    <div class="form-group row">
                        {{ form_label(configurationForm.debug) }}
                        <div class="col-sm">
                            {{ form_widget(configurationForm.debug) }}
                            {{ form_errors(configurationForm.debug) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(configurationForm.cache_ttl) }}
                        <div class="col-sm">
                            {{ form_widget(configurationForm.cache_ttl) }}
                            {{ form_errors(configurationForm.cache_ttl) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(configurationForm.api_enabled) }}
                        <div class="col-sm">
                            {{ form_widget(configurationForm.api_enabled) }}
                            {{ form_errors(configurationForm.api_enabled) }}
                        </div>
                    </div>

                    <div class="card-footer">
                        {{ ui.button('Save'|trans({}, 'Admin.Actions'), 'primary', 'save', {'type': 'submit'}) }}
                    </div>

                    {{ form_end(configurationForm) }}
                </div>
            </div>
        </div>

        {# Sidebar #}
        <div class="col-xl-4">
            {# Quick Links #}
            <div class="card mb-3">
                <div class="card-header">
                    <h3 class="card-header-title">
                        {{ ui.icon('link', 'md') }}
                        {{ 'Quick Links'|trans({}, 'Modules.WeprestaAcf.Admin') }}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="{{ path('wepresta_acf_builder') }}" class="list-group-item list-group-item-action">
                            {{ ui.icon('list', 'sm') }}
                            {{ 'Manage Field Groups'|trans({}, 'Modules.WeprestaAcf.Admin') }}
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            {{ ui.icon('cached', 'sm') }}
                            {{ 'Clear Cache'|trans({}, 'Modules.WeprestaAcf.Admin') }}
                        </a>
                    </div>
                </div>
            </div>

            {# Documentation #}
            <div class="card">
                <div class="card-header">
                    <h3 class="card-header-title">
                        {{ ui.icon('help_outline', 'md') }}
                        {{ 'Documentation'|trans({}, 'Admin.Global') }}
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        {{ 'Need help? Check our documentation for detailed guides and API references.'|trans({}, 'Modules.WeprestaAcf.Admin') }}
                    </p>
                    {{ ui.button_link('View Documentation'|trans({}, 'Admin.Actions'), 'https://devdocs.prestashop.com', 'outline-primary', 'menu_book', {'target': '_blank'}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('../modules/wepresta_acf/views/dist/admin.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('../modules/wepresta_acf/views/dist/admin.css') }}">
{% endblock %}
