{#
 # CPT Post List Template - List posts for a specific type
 #}

{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-header-title">
                            {{ type.name }} - {{ 'Posts'|trans({}, 'Modules.Weprestaacf.Admin') }}
                        </h3>
                        <div class="card-header-toolbar">
                            <a href="{{ path('wepresta_acf_cpt_posts_create', {'typeSlug': type.slug}) }}" class="btn btn-primary">
                                <i class="material-icons">add</i>
                                {{ 'New Post'|trans({}, 'Modules.Weprestaacf.Admin') }}
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if posts|length > 0 %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>{{ 'Title'|trans({}, 'Admin.Global') }}</th>
                                        <th>{{ 'Slug'|trans({}, 'Admin.Global') }}</th>
                                        <th>{{ 'Status'|trans({}, 'Admin.Global') }}</th>
                                        <th>{{ 'Date'|trans({}, 'Admin.Global') }}</th>
                                        <th>{{ 'Actions'|trans({}, 'Admin.Global') }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for post in posts %}
                                        <tr>
                                            <td>{{ post.getTitle() }}</td>
                                            <td><code>{{ post.getSlug() }}</code></td>
                                            <td>
                                                <span class="badge badge-{{ post.isPublished() ? 'success' : 'secondary' }}">
                                                    {{ post.getStatus()|trans({}, 'Modules.Weprestaacf.Admin') }}
                                                </span>
                                            </td>
                                            <td>{{ post.getDateUpd()|date('d/m/Y H:i') }}</td>
                                            <td>
                                                <a href="{{ path('wepresta_acf_cpt_posts_edit', {'typeSlug': type.slug, 'id': post.getId()}) }}" class="btn btn-sm btn-outline-secondary">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                                <form method="post" action="{{ path('wepresta_acf_cpt_posts_delete', {'typeSlug': type.slug, 'id': post.getId()}) }}" style="display:inline" onsubmit="return confirm('{{ 'Are you sure?'|trans({}, 'Admin.Notifications.Warning') }}')">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="material-icons">delete</i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                            {# Pagination #}
                            {% if total > limit %}
                                <nav>
                                    <ul class="pagination">
                                        {# Pagination links would go here #}
                                    </ul>
                                </nav>
                            {% endif %}
                        {% else %}
                            <div class="alert alert-info">
                                {{ 'No posts yet'|trans({}, 'Modules.Weprestaacf.Admin') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
