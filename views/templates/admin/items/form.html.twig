{# **
 * Module Starter - Item Form Template
 * #}

{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-header-title">
                    <i class="material-icons">{{ itemId is defined ? 'edit' : 'add' }}</i>
                    {{ layoutTitle }}
                </h3>
            </div>
            <div class="card-body">
                {% if form is defined %}
                    {{ form_start(form) }}

                    <div class="form-group row">
                        {{ form_label(form.name) }}
                        <div class="col-sm">
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.description) }}
                        <div class="col-sm">
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.active) }}
                        <div class="col-sm">
                            {{ form_widget(form.active) }}
                            {{ form_errors(form.active) }}
                        </div>
                    </div>

                    <div class="card-footer">
                        <a href="{{ path('wepresta_acf_items_index') }}" class="btn btn-outline-secondary">
                            <i class="material-icons">arrow_back</i>
                            {{ 'Cancel'|trans({}, 'Admin.Actions') }}
                        </a>
                        <button type="submit" class="btn btn-primary float-right">
                            <i class="material-icons">save</i>
                            {{ 'Save'|trans({}, 'Admin.Actions') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                {% else %}
                    <div class="alert alert-warning">
                        {{ 'Form not available'|trans({}, 'Modules.Weprestaacf.Admin') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-xl-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-header-title">
                    <i class="material-icons">help_outline</i>
                    {{ 'Help'|trans({}, 'Admin.Global') }}
                </h3>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <strong>{{ 'Name'|trans({}, 'Admin.Global') }}:</strong>
                    {{ 'The unique identifier for this item.'|trans({}, 'Modules.Weprestaacf.Admin') }}
                </p>
                <p class="text-muted">
                    <strong>{{ 'Description'|trans({}, 'Admin.Global') }}:</strong>
                    {{ 'An optional description for administrative purposes.'|trans({}, 'Modules.Weprestaacf.Admin') }}
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
